{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-sessions", "oh-my-opencode"],
  "default_agent": "maia",
  "model": "openai/gpt-4o",
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "write": "allow",
    "webfetch": "allow"
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**",
      ".output/**",
      ".next/**",
      "coverage/**",
      "*.log"
    ]
  },
  "provider": {
    "openrouter": {
      "models": {
        "gpt-4o-mini-free": {
          "id": "openai/gpt-4o-mini",
          "name": "GPT-4o Mini (OpenRouter)",
          "description": "Fast, efficient, full tool support",
          "limit": {
            "context": 128000,
            "output": 65536
          }
        },
        "gpt-4o": {
          "id": "openai/gpt-4o",
          "name": "GPT-4o (OpenRouter)",
          "description": "Best performance, full tool support",
          "limit": {
            "context": 128000,
            "output": 65536
          }
        },
        "claude-sonnet-4-20250514": {
          "id": "anthropic/claude-sonnet-4-20250514",
          "name": "Claude Sonnet 4 (OpenRouter)",
          "description": "Advanced reasoning, full tool support",
          "limit": {
            "context": 200000,
            "output": 8192
          }
        },
        "claude-3-5-sonnet": {
          "id": "zai-coding-plan/glm-4.7",
          "name": "Claude 3.5 Sonnet (OpenRouter)",
          "description": "Reliable, full tool support",
          "limit": {
            "context": 200000,
            "output": 8192
          }
        },
        "gemini-2-5-flash": {
          "id": "google/gemini-2.5-flash",
          "name": "Gemini 2.5 Flash (OpenRouter)",
          "description": "Fast, cost-effective, full tool support",
          "limit": {
            "context": 1000000,
            "output": 8192
          }
        },
        "gemini-2-0-flash-exp": {
          "id": "google/gemini-2.0-flash-exp",
          "name": "Gemini 2.0 Flash Exp (OpenRouter)",
          "description": "Very fast, experimental, full tool support",
          "limit": {
            "context": 1000000,
            "output": 8192
          }
        },
        "qwen-2-5-coder-32b": {
          "id": "qwen/qwen-2.5-coder-32b-instruct",
          "name": "Qwen 2.5 Coder 32B (OpenRouter)",
          "description": "Coding optimized, supports tools",
          "limit": {
            "context": 32768,
            "output": 8192
          }
        },
        "deepseek-chat": {
          "id": "deepseek/deepseek-chat",
          "name": "DeepSeek Chat (OpenRouter)",
          "description": "Good performance, supports tools",
          "limit": {
            "context": 64000,
            "output": 4096
          }
        },
        "deepseek-coder": {
          "id": "deepseek/deepseek-coder",
          "name": "DeepSeek Coder (OpenRouter)",
          "description": "Coding focused, supports tools",
          "limit": {
            "context": 128000,
            "output": 4096
          }
        }
      }
    }
  },
  "mcp": {
    "filesystem": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem", "."]
    },
    "git": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-git"]
    },
    "openskills": {
      "type": "local",
      "command": ["npx", "-y", "openskills", "mcp"]
    },
    "vibekanban": {
      "type": "local",
      "command": ["npx", "-y", "vibe-kanban@latest", "--mcp"]
    }
  },
  "tools": {
    "git_*": false,
    "filesystem_*": false,
    "openskills_*": false,
    "discord_*": false,
    "vibekanban_*": false,
    "session": false
  },
  "agent": {
    "maia": {
      "description": "THE ORCHESTRATOR. Strategic planner. Can do quick tasks, delegates complex work.",
      "model": "openai/gpt-4o",
      "fallback_models": [
        "zai-coding-plan/glm-4.7",
        "google/gemini-2.5-flash"
      ],
      "retry_config": {
        "max_attempts_per_model": 3,
        "timeout_ms": 10000
      },
      "mode": "primary",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "skill": true,
        "todowrite": true,
        "todoread": true,
        "question": true,
        "webfetch": true,
        "write": true,
        "edit": true,
        "bash": true,
        "openskills_*": true,
        "discord_*": true,
        "vibekanban_*": true,
        "session": true
      }
    },
    "coder": {
      "description": "THE ARCHITECT. God-Tier Code Synthesis. Full write access. LSP enabled.",
      "model": "google/gemini-2.5-flash",
      "fallback_models": [
        "openai/gpt-4o-mini",
        "deepseek/deepseek-coder",
        "qwen/qwen-2.5-coder-32b-instruct"
      ],
      "retry_config": {
        "max_attempts_per_model": 3,
        "timeout_ms": 10000
      },
      "mode": "subagent",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "skill": true,
        "write": true,
        "edit": true,
        "patch": true,
        "bash": true,
        "lsp": true,
        "git_*": true,
        "filesystem_*": true,
        "vibekanban_*": true,
        "webfetch": false,
        "question": false,
        "session": true
      }
    },
    "ops": {
      "description": "INFRASTRUCTURE GOD. DevOps, Docker, Coolify, n8n. Full bash + git access.",
      "model": "openai/gpt-4o-mini",
      "fallback_models": ["google/gemini-2.5-flash", "deepseek/deepseek-chat"],
      "retry_config": {
        "max_attempts_per_model": 3,
        "timeout_ms": 10000
      },
      "mode": "subagent",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "skill": true,
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": true,
        "filesystem_*": true,
        "discord_*": true,
        "vibekanban_*": true,
        "question": false,
        "session": true
      },
      "permission": {
        "bash": {
          "*": "allow",
          "rm -rf *": "ask",
          "docker rm *": "ask"
        }
      }
    },
    "researcher": {
      "description": "THE ORACLE. Deep Context Analyst. Read-only. Webfetch enabled.",
      "model": "zai-coding-plan/glm-4.7",
      "fallback_models": ["google/gemini-2.5-flash", "openai/gpt-4o"],
      "retry_config": {
        "max_attempts_per_model": 3,
        "timeout_ms": 10000
      },
      "mode": "subagent",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "lsp": true,
        "git_*": true,
        "vibekanban_*": true,
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "session": true
      }
    },
    "opencode": {
      "description": "SELF-META SPECIALIST. OpenCode config, agent, MCP, and skill management.",
      "model": "google/gemini-2.5-flash",
      "fallback_models": ["openai/gpt-4o-mini", "zai-coding-plan/glm-4.7"],
      "retry_config": {
        "max_attempts_per_model": 3,
        "timeout_ms": 10000
      },
      "mode": "subagent",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "edit": true,
        "write": true,
        "skill": true,
        "webfetch": true,
        "bash": false
      }
    },
    "starter": {
      "description": "WORKSPACE WIZARD. Onboards new projects and configures perfect environment.",
      "model": "google/gemini-2.5-flash",
      "fallback_models": ["openai/gpt-4o-mini", "zai-coding-plan/glm-4.7"],
      "retry_config": {
        "max_attempts_per_model": 3,
        "timeout_ms": 10000
      },
      "mode": "subagent",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "write": true,
        "edit": true,
        "skill": true,
        "bash": true,
        "webfetch": true,
        "question": true
      }
    },
    "maia_premium": {
      "description": "PREMIUM ORCHESTRATOR. Heavy-duty reasoning for complex challenges.",
      "model": "zai-coding-plan/glm-4.7",
      "mode": "subagent",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "skill": true,
        "todowrite": true,
        "todoread": true,
        "question": true,
        "webfetch": true,
        "write": true,
        "edit": true,
        "bash": true,
        "openskills_*": true,
        "discord_*": true
      }
    },
    "workflow": {
      "description": "AUTOMATION ARCHITECT. Master of n8n, Flowise, Trigger.dev, and agentic workflows.",
      "model": "google/gemini-2.5-flash",
      "fallback_models": ["zai-coding-plan/glm-4.7", "openai/gpt-4o"],
      "retry_config": {
        "max_attempts_per_model": 3,
        "timeout_ms": 10000
      },
      "mode": "subagent",
      "tools": {
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "skill": true,
        "write": true,
        "edit": true,
        "webfetch": true,
        "question": true
      }
    }
  },
  "command": {
    "plan": {
      "description": "Construct a Strategic Battle Plan",
      "template": "Strategic Initiative: \"$ARGUMENTS\".\n1. Read project structure.\n2. Construct a multi-agent battle plan.\n3. Delegate to @coder, @ops, @researcher.",
      "agent": "maia"
    },
    "audit": {
      "description": "Run strict God-Tier code quality checks",
      "template": "Audit codebase. Use grep/glob/lsp. Report issues. NO MERCY.",
      "agent": "reviewer"
    },
    "ops": {
      "description": "Execute Infra tasks with Extreme Prejudice",
      "template": "Infra Task: \"$ARGUMENTS\".\n1. Plan safety checks.\n2. Execute with precision.\n3. Verify state.",
      "agent": "ops"
    },
    "research": {
      "description": "Ingest aggressively and Synthesize",
      "template": "Context: \"$ARGUMENTS\".\n1. Ingest documentation/files.\n2. Synthesize into insight for @maia.",
      "agent": "researcher"
    },
    "research-fast": {
      "description": "Fast research with fallback model for high availability",
      "template": "Context: \"$ARGUMENTS\".\n1. Ingest documentation/files.\n2. Synthesize into insight for @maia.\n3. Uses researcher_fast (Gemini Flash) for better availability.",
      "agent": "researcher_fast"
    },
    "supercharge": {
      "description": "Meta-Analyze entire ecosystem",
      "template": "Analyze project meta-structure. Suggest God-Tier improvements.",
      "agent": "maia"
    },
    "init": {
      "description": "Bootstrap Reality",
      "template": "Initialize environment. Check Droids, Codebase, and Skills. Report readiness.",
      "agent": "maia"
    },
    "meta": {
      "description": "Manage OpenCode configuration",
      "template": "OpenCode Meta Task: \"$ARGUMENTS\".\nAnalyze and optimize the agent ecosystem configuration.",
      "agent": "opencode"
    },
    "start": {
      "description": "Onboard a new workspace with Starter wizard",
      "template": "New Workspace Onboarding: \"$ARGUMENTS\".\n1. Scan project structure.\n2. Ask strategic questions (max 5).\n3. Configure environment.\n4. Create Starter Report for @maia.",
      "agent": "starter"
    },
    "heavy": {
      "description": "Invoke Giuzu (Digital Clone) - Powered by Gemini 2.0 Flash (1M Context)",
      "template": "Complex Challenge: \"$ARGUMENTS\".\n1. Deep analysis required.\n2. Generate multiple approaches.\n3. Recommend with confidence intervals.\n4. Return to @maia when resolved.",
      "agent": "maia_premium"
    },
    "workflow": {
      "description": "Create or manage automated workflows",
      "template": "Workflow Task: \"$ARGUMENTS\".\n1. Understand intent.\n2. Choose platform (n8n/Flowise/Trigger.dev).\n3. Build incrementally.\n4. Document in .opencode/workflows/.",
      "agent": "workflow"
    },
    "see": {
      "description": "Trigger Vision Path",
      "template": "Vision Request: \"$ARGUMENTS\".\n1. Analyze provided image/context.\n2. Extract key details.\n3. Report findings back for standard processing.",
      "agent": "vision"
    },
    "clone": {
      "description": "Consult or train Giuzu (Giulio's digital clone)",
      "template": "Clone Consultation: \"$ARGUMENTS\".\n1. Access training data.\n2. Apply personality matrix.\n3. Respond as Giulio would.\n4. Update learnings if appropriate.",
      "agent": "giuzu"
    }
  }
}
