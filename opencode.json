{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "maia",
  "model": "zai-coding-plan/glm-4.7",
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "write": "allow",
    "webfetch": "allow"
  },
  "provider": {
    "zai-coding-plan": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Z.ai Paid Coding Plan",
      "options": {
        "baseURL": "https://api.z.ai/api/coding/paas/v4"
      }
    },
    "google": {
      "npm": "@ai-sdk/google",
      "name": "Gemini Engine"
    },
    "opencode": {
      "name": "OpenCode Models"
    },
    "openrouter": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "OpenRouter Global",
      "options": {
        "baseURL": "https://openrouter.ai/api/v1"
      }
    }
  },
  "mcp": {
    "filesystem": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ]
    },
    "git": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-git"
      ]
    },
    "vibekanban": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "vibe-kanban@latest",
        "--mcp"
      ]
    }
  },
  "agent": {
    "maia": {
      "description": "THE ORCHESTRATOR. Strategy and Command.",
      "model": "zai-coding-plan/glm-4.7",
      "mode": "primary",
      "tools": {
        "vibekanban_*": true,
        "session": true,
        "read": true,
        "write": true,
        "glob": true,
        "skill": true,
        "bash": true
      }
    },
    "sisyphus": {
      "description": "THE PROJECT MANAGER. Execution Loop.",
      "model": "zai-coding-plan/glm-4.7",
      "mode": "subagent",
      "tools": {
        "vibekanban_*": true,
        "session": true,
        "read": true,
        "write": true,
        "grep": true,
        "todoread": true,
        "todowrite": true,
        "skill": true
      }
    },
    "coder": {
      "description": "THE ARCHITECT. Build and Implementation.",
      "model": "zai-coding-plan/glm-4.7",
      "mode": "subagent",
      "tools": {
        "filesystem_*": true,
        "git_*": true,
        "patch": true,
        "edit": true,
        "write": true,
        "read": true,
        "lsp": true,
        "bash": true,
        "skill": true
      }
    },
    "ops": {
      "description": "THE INFRASTRUCTURE. Docker and System Stability.",
      "model": "zai-coding-plan/glm-4.7",
      "mode": "subagent",
      "tools": {
        "bash": true,
        "read": true,
        "write": true,
        "edit": true,
        "webfetch": true,
        "scan_for_redundancy": true,
        "skill": true
      }
    },
    "researcher": {
      "description": "THE ORACLE. Deep Context and Documentation.",
      "model": "google/gemini-2.5-pro",
      "mode": "subagent",
      "tools": {
        "webfetch": true,
        "read": true,
        "grep": true,
        "glob": true,
        "skill": true
      }
    },
    "researcher_fast": {
      "description": "THE FLASH ORACLE.",
      "model": "google/gemini-2.5-flash",
      "mode": "subagent",
      "tools": {
        "webfetch": true,
        "read": true,
        "grep": true,
        "glob": true,
        "skill": true
      }
    },
    "giuzu": {
      "description": "THE REASONING CLONE. Strategic Simulation.",
      "model": "openrouter/deepseek/deepseek-r1:free",
      "mode": "subagent",
      "tools": {
        "read": true,
        "write": true,
        "session": true,
        "vibekanban_get_board": true,
        "skill": true
      }
    },
    "vision": {
      "description": "THE VISUAL ANALYST. Multimodal and Video.",
      "model": "google/gemini-2.0-flash",
      "mode": "subagent",
      "tools": {
        "read": true,
        "webfetch": true,
        "session": true
      }
    },
    "reviewer": {
      "description": "THE GATEKEEPER. Safety and Logic Audits.",
      "model": "opencode/big-pickle",
      "mode": "subagent",
      "tools": {
        "git_blame": true,
        "read": true,
        "grep": true,
        "lsp": true,
        "skill": true
      }
    },
    "opencode": {
      "description": "THE PLATFORM ORACLE. Meta-Level Ecosystem Mastery.",
      "model": "google/gemini-2.5-flash",
      "mode": "subagent",
      "tools": {
        "read": true,
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": true,
        "grep": true,
        "glob": true,
        "list": true,
        "scan_for_redundancy": true,
        "skill": true
      }
    },
    "workflow": {
      "description": "THE AUTOMATION ARCHITECT.",
      "model": "openrouter/qwen/qwen-2.5-coder-32b-instruct",
      "mode": "subagent",
      "tools": {
        "read": true,
        "write": true,
        "bash": true,
        "vibekanban_create_card": true,
        "skill": true
      }
    },
    "starter": {
      "description": "THE BOOTSTRAPPER. Quick project init.",
      "model": "google/gemini-2.5-flash",
      "mode": "subagent",
      "tools": {
        "read": true,
        "write": true,
        "bash": true,
        "vibekanban_create_card": true,
        "skill": true
      }
    },
    "librarian": {
      "description": "THE CURATOR. Manages the Success Vault.",
      "model": "google/gemini-2.5-flash",
      "mode": "subagent",
      "tools": {
        "read": true,
        "write": true,
        "glob": true,
        "grep": true,
        "skill": true
      }
    },
    "maia_premium": {
      "description": "THE GPT-5 ARCHITECT. Supreme Arbitration.",
      "model": "google/gemini-2.5-pro",
      "mode": "subagent",
      "tools": {
        "read": true,
        "write": true,
        "session": true,
        "skill": true
      }
    }
  }
}